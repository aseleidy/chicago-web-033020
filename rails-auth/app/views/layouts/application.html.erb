<!DOCTYPE html>
<html>
  <head>
    <title>Auth</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if logged_in? %>
      <%= link_to "Goodbye, #{current_user.email}", logout_path, method: :delete %>
    <% else %>
      <%= link_to 'Log in', login_path %>
    <% end %>
    <p><%= flash[:message] %></p>
    <%= yield %>
  </body>
</html>
