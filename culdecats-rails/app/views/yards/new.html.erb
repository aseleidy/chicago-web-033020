<!-- form_with model: @yard -->
<%= form_for @yard do |f| %>
  <%= f.label :title, "Title:" %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :size, "Size:" %>
  <%= f.text_field :size %>
  <br>
  <%= f.label :cat_id, "Cat:" %>
  <select name="yard[cat_id]" id="yard_cat_id">
    <% @cats.each do |cat| %>
      <option value="<%= cat.id %>"><%= cat.name %></option>
    <% end %>
  </select>
  <br>
  <%= f.submit %>
<% end %>